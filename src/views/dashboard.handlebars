<div class="dashboard-container">

    <main class="dashboard-content">
        <h1 class="dashboard-title">Bem-vindo(a) {{companyData.companyName}}</h1>

        <section class="perfil-usuario-container">
            <!-- Lado esquerdo: Dados da Empresa -->
            <div class="perfil-card">
                <div id="dados-usuario" class="user-data-container">
                    <h2>Seus dados:</h2>
                    <p><strong>Razão social:</strong> {{companyData.companyName}}</p>
                    <p><strong>CNPJ:</strong> {{formatCNPJ companyData.cnpj}}</p>
                    <p><strong>Email:</strong> {{user.email}}</p>
                    <p><strong>Telefone:</strong> {{companyData.phone}}</p>
                    <p><strong>Endereço:</strong> {{companyData.address}}</p>
                    <p><strong>Membro Desde:</strong> {{formatDate user.createdAt}}</p>
                </div>

                <div class="perfil-botoes">
                    <a href="/edit-profile" class="btn-perfil">Editar Perfil</a>
                </div>
            </div>

            <!-- Lado direito: Tabela de Relatórios -->
            <div class="tabela-relatorios-container">
                <h2>Meus Relatórios</h2>
                <div class="report-filters">
                    <input type="text" id="report-search-input" placeholder="Buscar por descrição...">
                    <select id="report-year-filter">
                        <option value="">Todos os Anos</option>
                    </select>
                    <select id="report-month-filter">
                        <option value="">Todos os Meses</option>
                        <option value="1">Janeiro</option>
                        <option value="2">Fevereiro</option>
                        <option value="3">Março</option>
                        <option value="4">Abril</option>
                        <option value="5">Maio</option>
                        <option value="6">Junho</option>
                        <option value="7">Julho</option>
                        <option value="8">Agosto</option>
                        <option value="9">Setembro</option>
                        <option value="10">Outubro</option>
                        <option value="11">Novembro</option>
                        <option value="12">Dezembro</option>
                    </select>
                    <select id="report-sort-order">
                        <option value="desc">Mais Recentes</option>
                        <option value="asc">Mais Antigos</option>
                    </select>
                </div>
                <table class="tabela-relatorios">
                    <thead>
                        <tr>
                            <th>Nº</th>
                            <th>Descrição</th>
                            <th>Data</th>
                            <th>Ações</th>
                        </tr>
                    </thead>
                    <tbody id="company-reports-table-body">
                        {{!Relatórios serão carregados dinâmicamente aqui.}}
                        {{#if reports}}
                            {{#each reports}}
                                <tr>
                                    <td>{{@index}}</td> 
                                    <td>{{this.description}}</td>
                                    <td>{{formatDate this.creationDate}}</td>
                                    <td>
                                        <button class="btn-acao download-report-btn" data-id="{{this.id}}">Baixar</button>
                                    </td>
                                </tr>
                            {{/each}}
                        {{else}}
                            <tr>
                                <td colspan="4">Nenhum relatório disponível.</td>
                            </tr>
                        {{/if}}
                    </tbody>
                </table>
                <div id="company-pagination-controls" class="pagination-controls">
                    {{! Controles para paginação da tabela de relatórios }}
                </div>
            </div>
        </section>
    </main>
</div>

