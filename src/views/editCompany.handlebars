<section class="perfil-usuario-container">
    <div class="perfil-card">
        <div id="dados-usuario" class="user-data-container">
            <p>Carregando dados...</p>
        </div>

        <div class="perfil-botoes">
            <button id="edit-data-btn" class="btn-perfil">Editar Dados</button>
            <button id="add-report-btn" class="btn-perfil">Adicionar Relatório</button>
        </div>

        
    </div>

    <div class="edit-profile-form-container" style="display: none;">
        <div class="perfil-card">
            <div class="user-data-container">
                <h2>Editando Perfil da Empresa</h2>
                <form id="editProfileForm">
                    <div class="form-group">
                        <label for="editEmail">Email de Login:</label>
                        <input type="email" id="editEmail" name="email" required>
                    </div>
                    <div class="form-group">
                        <label for="editPassword">Nova Senha (deixe em branco para não alterar):</label>
                        <input type="password" id="editPassword" name="password" placeholder="********">
                    </div>
                    <hr>
                    <div class="form-group">
                        <label for="editCompanyName">Nome da Empresa:</label>
                        <input type="text" id="editCompanyName" name="companyName" required>
                    </div>
                    <div class="form-group">
                        <label for="editCnpj">CNPJ:</label>
                        <input type="text" id="editCnpj" name="cnpj" required>
                    </div>
                    <div class="form-group">
                        <label for="editPhone">Telefone:</label>
                        <input type="text" id="editPhone" name="phone">
                    </div>
                    <div class="form-group">
                        <label for="editAddress">Endereço:</label>
                        <input type="text" id="editAddress" name="address">
                    </div>

                    <div id="editProfileFeedback" style="margin-top: 15px; font-weight: bold;"></div>
                    
                    <div class="form-buttons">
                        <button type="submit" class="btn-perfil">Salvar Alterações</button>
                        <button type="button" id="cancelEditBtn" class="btn-perfil" style="background-color: #6c757d;">Cancelar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    <div class="tabela-relatorios-container">
        <h2>Relatórios</h2>
        <table class="tabela-relatorios">
            <thead>
                <tr>
                    <th>Nº</th>
                    <th>Descrição</th>
                    <th>Data</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody id="reports-table-body">
                <tr>
                    <td colspan="4">Carregando relatórios...</td>
                </tr>
            </tbody>
        </table>
    </div>
</section>

<div id="addReportModal" class="modal">
    <div class="modal-content">
        <span class="close-button-form">&times;</span>
        <h2>Adicionar Novo Relatório</h2>
        <form id="addReportForm" enctype="multipart/form-data">
            <div class="form-group">
                <label for="reportDescription">Descrição:</label>
                <input type="text" id="reportDescription" name="description" required>
            </div>
            <div class="form-group">
                <label for="reportCreationDate">Data de Criação:</label>
                <input type="datetime-local" id="reportCreationDate" name="creationDate" required>
            </div>
            <div class="form-group">
                <label for="reportPdfFile">Arquivo PDF:</label>
                <input type="file" id="reportPdfFile" name="pdfFile" accept=".pdf" required>
            </div>
            <button type="submit" class="btn-perfil">Salvar Relatório</button>
            <button type="button" class="btn-perfil close-button-form">Cancelar</button>
            <div id="report-feedback-message" style="margin-top: 10px; font-weight: bold;"></div>
        </form>
    </div>
</div>
