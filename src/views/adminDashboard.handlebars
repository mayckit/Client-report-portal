<section class="admin-dashboard-container-simple">

  <div class="top-controls"> 
    <div class="barra-pesquisa-container">
      <input type="text" id="search-input" placeholder="Pesquisar...">
      <select id="search-filter">
        <option value="all">Nome/Email</option>
        <option value="cnpj">CNPJ</option>
      </select>
    </div>
    <a href="/admin/edit-profile" class="btn-perfil btn-perfil-admin">Editar Meu Perfil</a>
  </div>

  <div class="create-user-button-container">
    <a href="/create-user" class="btn-perfil create-user-btn">Cadastrar Novo Usuário/Empresa</a>
  </div>


  <div class="clientes-mini-modais" id="lista-usuarios">
    <!-- cards de infos dos clientes aparecem aqui -->
    <div style="grid-column: 1 / -1; text-align: center; padding: 20px; color: #777;">Carregando empresas...</div>
  </div>
  <div id="mensagem-nenhum-resultado" style="display: none; margin-top: 20px; font-size: 18px; color: #777; height: 40vh;">
    Nenhum resultado encontrado. Tente outro nome, e-mail ou CNPJ.
</div>

  <div class="pagination-controls" id="pagination-controls">
    <!-- Paginação será renderizada aqui pelo JavaScript -->
  </div>

</section>

<div id="detalhesModal" class="modal">
  <div class="modal-content">
    <span class="close-btn">&times;</span>
    <h2 id="modal-titulo"></h2>
    <div id="modal-conteudo">
      <!-- conteudo adicionado dinamicamente no modal -->
    </div>
  </div>
</div>
